{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/components/icons/EyeSlashFilledIcon.jsx",
    "src/app/components/LoginModal.jsx",
    "src/app/middleware.js",
    "src/app/tasks/page.jsx",
    "src/app/components/NavBar.jsx",
    "src/app/tasks/[id]/page.jsx"
  ],
  "exclude": ["node_modules"]
}
